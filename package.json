{
  "name": "biz-utils",
  "version": "0.3.8",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run docs:dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "test:cov": "pnpm -r run test:cov",
    "pub": "npm run build && pnpm publish -r --access public",
    "tsc": "pnpm -r run tsc",
    "docs:pages": "gh-pages -d docs-dist -b gh-pages",
    "docs:apis": "typedoc --options ./typedoc.json",
    "docs:release": "npm run docs:apis && npm run docs:build && npm run docs:pages",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "docs:build": "vitepress build docs",
    "cs": "changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.1",
    "@types/node": "^24.2.0",
    "@types/react": "^18.3.2",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.11.10",
    "antd": "^5.17.2",
    "cross-env": "^10.0.0",
    "father": "^4.4.1",
    "fs-extra": "^11.3.0",
    "gh-pages": "^6.3.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.1.2",
    "typedoc": "^0.28.9",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.4.5",
    "vitepress": "^1.6.3"
  }
}
