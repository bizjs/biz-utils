{
  "name": "root",
  "version": "0.0.0",
  "scripts": {
    "start": "dumi dev",
    "exp": "cd packages/examples && pnpm run exp",
    "exp:init": "cd packages/examples && pnpm i",
    "exp:build": "cd packages/examples && pnpm run build",
    "bootstrap": "pnpm i",
    "build": "lerna run build --stream",
    "docs": "lerna run docs --stream",
    "test": "lerna run test --stream",
    "test:cov": "lerna run test:cov --stream",
    "pub": "npm run build && lerna publish",
    "tsc": "lerna run tsc --stream",
    "analyze": "cross-env ANALYZE=1 dumi build",
    "docs:build": "dumi build && node ./scripts/add_base.js",
    "docs:apis": "npm run docs && node ./scripts/copy_apis.js",
    "docs:deploy": "gh-pages -d docs-dist",
    "pub:doc": "npm run docs:build && npm run docs:apis && npm run docs:deploy"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.1",
    "@types/react": "^18.3.2",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.11.10",
    "antd": "^5.17.2",
    "cross-env": "^7.0.3",
    "dumi": "^2.3.4",
    "father": "^4.4.1",
    "fs-extra": "^10.1.0",
    "gh-pages": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^7.4.2",
    "lint-staged": "^10.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.1.2",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5"
  }
}
