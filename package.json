{
  "name": "root",
  "version": "0.0.0",
  "scripts": {
    "start": "dumi dev",
    "exp": "cd packages/examples && pnpm run exp",
    "exp:init": "cd packages/examples && pnpm i",
    "exp:build": "cd packages/examples && pnpm run build",
    "bootstrap": "pnpm i",
    "build": "lerna run build --stream",
    "docs": "lerna run docs --stream",
    "test": "lerna run test --stream",
    "test:cov": "lerna run test:cov --stream",
    "pub": "npm run build && lerna publish",
    "tsc": "lerna run tsc --stream",
    "analyze": "cross-env ANALYZE=1 dumi build",
    "docs:pages": "gh-pages -d docs-dist -b gh-pages",
    "docs:apis": "npm run docs",
    "docs:release": "npm run docs:apis && npm run docs:build && npm run docs:pages",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "docs:build": "vitepress build docs"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.1",
    "@types/react": "^18.3.2",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.11.10",
    "antd": "^5.17.2",
    "cross-env": "^10.0.0",
    "dumi": "^2.4.21",
    "father": "^4.4.1",
    "fs-extra": "^11.3.0",
    "gh-pages": "^6.3.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lerna": "^8.2.3",
    "lint-staged": "^16.1.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.1.2",
    "typedoc": "^0.28.9",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.4.5",
    "vitepress": "^1.6.3"
  }
}
